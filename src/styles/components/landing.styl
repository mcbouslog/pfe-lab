.landing
  background: url(../images/builder-landing.jpg) center center no-repeat
  background-size: cover
  display: flex
  flex-direction: column
  min-height: 100vh
  color: white

  &__hero
    display: flex
    flex-direction: column
    align-items: center
    padding: 5em 0

  &__title
    color: inherit
    font-weight: 300
    line-height: 40px
    padding: 1.5em 0 0.5em

  &__tagline
    color: inherit
    margin: 0 auto
    max-width: 600px
    padding: 1em 0 6.5em

  &__buttons
    display: inline-block

  &__button
    @extends .button
    font-size: 1.6em
    font-weight: 400
    margin-bottom: 3vh
    padding: 1em 0
    width: 250px
    background: TEAL_MID

    &:hover
      background: lighten(TEAL_MID, 20%)

    // TODO add color variation

  &__links
    display: inline-block
    margin-left: 3em
    padding: 0 0 0 7.5px
    border-left: 2px solid white

    &__heading
      color: white
      margin: 0 0 5px 0

    &__link
      display: block
