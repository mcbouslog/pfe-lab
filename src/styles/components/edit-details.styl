.organization-edit-details
  display: inline-block

  .file-button
    z-index: 1

  &__forms
    display: inline-flex

    .forms__aside
      flex: 1 1
      margin-right: 1.5vw
      line-height: 1.25

    .forms__section
      flex-grow: 5

    .org-details-slug-editor__form-input
      margin-top: 0.5em
      display: block
      border: 1px solid
      border-radius: 2px
      box-shadow: 1px 2px 5px -1px rgba(0,0,0,0.2) inset
      box-sizing: border-box
      padding: 0.5em 1vw
      width: 100%
    .org-details-slug-editor__form-help
      font-size: .9em
